@page "/"
@using Models

<PageTitle>To Do List</PageTitle>

<table class="table table-striped table-bordered table-hover table-secondary mt-3" >
    <thead class="table-dark">
        <th>Task</th>
        <th>Description</th>
        <th>Important Level</th>
        <th>Time Required</th>
        <th></th>
    </thead>
    <tbody>
        @foreach (var task in tasks){
            <tr>
                <td>@task.TaskName</td>
                <td>@task.Description</td>
                <td>@task.ImportantLevel</td>
                <td>@task.TimeRequired</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

